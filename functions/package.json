{
  "name": "functions",
  "config": {
    "backup_path": "gs://react-firebase-4283b.appspot.com/firestore"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only auth,functions,firestore --import ./emulators --export-on-exit",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "rm-local-backup": "rm -rf emulators/firestore",
    "create-backup": "gcloud firestore export $npm_package_config_backup_path",
    "download-backup": "gsutil -m cp -r $npm_package_config_backup_path ./emulators/",
    "rm-cloud-backup": "gsutil rm -r $npm_package_config_backup_path",
    "update-local-backup": "npm run rm-local-backup && npm run create-backup && npm run download-backup && npm run rm-cloud-backup"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "busboy": "^0.3.1",
    "cors": "^2.8.5",
    "date-fns": "^2.22.1",
    "express": "^4.17.1",
    "firebase": "^8.6.3",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "@types/cors": "^2.8.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-config-prettier": "^8.3.0",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "private": true
}
